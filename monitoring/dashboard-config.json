{
  "dashboard": {
    "title": "VoBee AI Orchestration - Grafana Dashboard",
    "tags": ["ai", "orchestration", "vobee"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Task Completion Rate",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(tasks_completed_total[5m])",
            "legendFormat": "Completed"
          },
          {
            "expr": "rate(tasks_failed_total[5m])",
            "legendFormat": "Failed"
          }
        ]
      },
      {
        "id": 2,
        "title": "Service Health",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(service_health{status=\"healthy\"})",
            "legendFormat": "Healthy Services"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ]
      },
      {
        "id": 4,
        "title": "Active Tasks",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(active_tasks)",
            "legendFormat": "Active"
          }
        ]
      },
      {
        "id": 5,
        "title": "Module Status",
        "type": "table",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "module_status",
            "format": "table"
          }
        ]
      },
      {
        "id": 6,
        "title": "Resource Utilization",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "avg(container_cpu_usage_seconds_total) by (service)",
            "legendFormat": "CPU {{service}}"
          },
          {
            "expr": "avg(container_memory_usage_bytes) by (service)",
            "legendFormat": "Memory {{service}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Success Rate by Module",
        "type": "piechart",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum by (module) (rate(tasks_completed_total[1h]))",
            "legendFormat": "{{module}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Error Rate",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx errors"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
